{% extends 'base.html.twig' %}
{% block title %}
SymfonySHOP
{% endblock %}
{% block body %}
<div class="row categMenu">
    <nav class=" navbar navbar-expand-md">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{path('home')}}"><b>Toutes les catégories</b></a>
                </li>
                {# LOOP care citeste toate Categoriile din BDD #}
                {% for category in categories %}
                <li class="nav-item">
                    <a class="nav-link text-dark ml-4" href="/article/{{category.name}}"><b>{{category.name}}</b></a>
                                                        {# HREF se schimba in functie de numele categoriei #}
                </li>
                {% endfor %}
                
            </ul>
        </div>
    </nav>
</div>
<div class="container mb-5">
    <div class="row justify-content-center">
        {% for article in articles %}
        <div class="card col-lg-4 col-md-6 col-sm-6 col-12">
            <div class="card-body text-center">
                <img src="{{ asset('image/'~ article.getImage)}}" class="card-img-top img-fluid img-size-max" alt="">
                <div class="card-title">
                    <span><i>{{article.getName}}</i></span>
                    <span class="green"><b>{{article.getPrice|number_format(2, '.', ',')}}€</b></span>
                                            {# Schimbare format pret, pt a arata zecimalele #}
                </div>
                <div class="card-text text-justify">
                    <i>{{article.getDescription}}</i>
                </div>
            </div>
            <div class="text-right mb-3">
                <a href="{{ path('modifOne', {'id' : article.id, 'price' : article.price, 'action' : 1 })}}" class="btn btn-sm" title="Add">
                    <img src="{{ asset('image/sprites.png')}}">
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}